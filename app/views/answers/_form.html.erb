<%= form_for ([@answer_session, @answer]) do |f| %>
  <%= f.error_messages %>
  <h1>
    <%=@answer.question.title%>
  </h1>
  <p class="description">
    <%=@answer.question.description%>
  </p>
  <p>
    <%=f.hidden_field :question_id, :value=>@answer.question.id %>
    <%= f.select :value, options_for_select([["Not Like Me",1],["Somewhat Like Me",2],["Like Me",3],["Very Like Me",4]] ) %>
  </p>
  <p><%= f.submit %></p>
<% end %>

